{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jasmine": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		],
		"no-unused-vars": [
			"error", {
				"args": "after-used"
			}
		],
		"prefer-arrow-callback": [
			"error"
		],
		"no-var": [
			"error"
		],
		"eqeqeq": [
			"error"
		],
		"no-trailing-spaces": [
			"error"
		]
	}
}
